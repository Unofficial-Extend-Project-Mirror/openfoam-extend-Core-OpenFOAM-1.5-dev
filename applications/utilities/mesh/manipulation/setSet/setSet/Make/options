/* setenv NOREADLINE environment variable if you don't want readline */

#if defined(NOREADLINE)
#else
    READLINELINC =\
        -DREADLINE=1 \
        -I$(RL_ARCH_PATH)/include

    READLINELINK =\
        $(RL_ARCH_PATH)/lib/libreadline.a \
        -L/usr/lib/termcap -L/usr/lib64/termcap -ltermcap -lncurses

#endif


EXE_INC = \
    $(READLINELINC) \
    -I$(LIB_SRC)/meshTools/lnInclude

EXE_LIBS = \
    -lmeshTools \
    $(READLINELINK)
