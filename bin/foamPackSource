# Script
#     foamPackSource
#
# Description
#     Packs and compresses the .C and .H files and Make/options
#     and Make/files in a given directory.
#
#------------------------------------------------------------------------------

# Default value for TMPDIR
TMPDIR=${TMPDIR:-/tmp}

if [ $# -ne 2 ]; then
    echo "Usage : `basename $0` directory tarFile"
    echo ""
    echo "Packs all .C and .H files and Make/options and Make/files into"
    echo "<tarFile>"
    echo ""
    exit
fi

if [ ! -d $1 ]; then
    echo "No directory $1"
    exit 1
fi

if [ -f $2 ]; then
    echo "$2 already exists."
    exit 1
fi

find $1                        \
    ! -type d                  \
   \( -type f -o -type l \)    \
    ! -name "*~"               \
 -a ! -name ".*~"              \
 -a ! -name "*.dep"            \
 -a ! -name "*.o"              \
 -a ! -name "*.so"             \
 -a ! -name "*.a"              \
 -a ! -name "*.tgz"            \
 -a ! -name "core"             \
 -a ! -name "core.[1-9]*"      \
 -a ! -name "log[0-9]*"        \
| sed                          \
 -e "/$1\/lib\//d"          \
 -e "/$1\/src\/mico-[0-9.]*\/platforms/d" \
 -e "/$1\/src\/mpich-[0-9.]*\/platforms/d" \
 -e "/$1\/src\/mpich-[0-9.]*\/lib/d" \
 -e "/$1\/src\/lam-[0-9.]*\/platforms/d" \
 -e '/applications\/bin\//d'   \
 -e '/Make[.A-Za-z]*\/[^\/]*\//d'    \
 > $TMPDIR/foamFiles.$$

tar czpf $2 --files-from $TMPDIR/foamFiles.$$

rm $TMPDIR/foamFiles.$$

#------------------------------------------------------------------------------
