# Script
#     doxyAwk
#
# Description
#     Converts cocoon style sentinel strings into doxygen style strings
#------------------------------------------------------------------------------

BEGIN {
  state=0
}

/\/\/-/ {
  state=1
    sub(/\/\/-/,"//!")
    print
    next
}

/\/\// {
  if (state==1) {
    state=2
      ns=match($0,"[^ ]")-1
      printf substr($0,0,ns) "/*!\n"
      sub(/\/\//,"  ")
      print
      next
      }
  if (state==2) {
    sub(/\/\//,"  ")
    print
    next
  }
  state=0
    printf "%s\n",$0
    next
}

{
  if (state==2) {
    printf substr($0,0,ns) "*/\n"
  }
  state=0
    printf "%s\n",$0
    next
}

#------------------------------------------------------------------------------
