# Script
#     foamNewRootCase
#
# Description
#     script that changes the root and case entries of existing FOAM files.
#     Usage: newRootCase <newRoot> <newCase> <newInstance> <fileName>
#
#------------------------------------------------------------------------------

echo "working on file " $2/$3/$4

set root=$1
set case=$2
set instance=$3
set local=`echo $4:h | sed -e 's/^\.\///' -e 's/^\.//'`

sed -e 's/    version *\([0-9.]*\) *; *$/    version  \1;/' \
    -e 's/    format *\([a-z]*\) *; *$/    format   \1;/' \
    -e s%'    root.*; *$'%'    root     "'$root'";'% \
    -e s%'    case.*; *$'%'    case     "'$case'";'% \
    -e s%'    instance.*$'%'    instance "'$instance'";'% \
    -e s%'    local.*$'%'    local    "'$local'";'% \
    $4 > temp.$$

mv temp.$$ $4

#------------------------------------------------------------------------------
